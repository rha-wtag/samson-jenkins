<%= form_for [project, stage], html: { class: "form-horizontal collapse_fieldsets" } do |form| %>
  <%= render 'shared/errors', object: stage %>

  <fieldset>
    <%= render 'stages/fields', form: form %>
  </fieldset>

  <hr>

  <%= form.actions delete: (:type if can?(:write, :stages, @project)) %>
<% end %>
